{
	"schemaVersion": 1,
	"id": "hud",
	"version": "${version}",
	"name": "hud",
	"description": "A simple hud for people who get lost easily",
	"authors": ["pidinit"],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "CC0-1.0",
	"icon": "assets/hud/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": ["com.pidinit.Hud"],
		"client": ["com.pidinit.HudClient"]
